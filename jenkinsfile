pipeline {
    agent any

    environment {
        APP_NAME = "amazon-prime-clone"
        DOCKER_IMAGE = "vk2615/${APP_NAME}"
        DOCKER_TAG = "${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = "dockerhub-vk2615"
        SSH_CREDENTIALS = "devopstech-ssh"
        DEPLOY_SERVER = "ubuntu@18.207.129.147"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/vinothdevops87-dotcom/amazon-prime.git'
            }
        }

        stage('Build & Push Docker Image on EC2') {
            steps {
                sshagent(["${SSH_CREDENTIALS}"]) {
                    withCredentials([usernamePassword(credentialsId: "${REGISTRY_CREDENTIALS}", usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh """
                            ssh -o StrictHostKeyChecking=no ${DEPLOY_SERVER} '
                                cd /home/ubuntu &&
                                rm -rf amazon-prime || true &&
                                git clone https://github.com/vinothdevops87-dotcom/amazon-prime.git &&
                                cd amazon-prime &&
                                echo "Logging into Docker Hub..." &&
                                echo ${PASSWORD} | docker login -u ${USERNAME} --password-stdin &&
                                docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} . &&
                                docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                            '
                        """
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(["${SSH_CREDENTIALS}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${DEPLOY_SERVER} '
                            docker pull ${DOCKER_IMAGE}:${DOCKER_TAG} &&
                            docker stop ${APP_NAME} || true &&
                            docker rm ${APP_NAME} || true &&
                            docker run -d --name ${APP_NAME} -p 8088:80 ${DOCKER_IMAGE}:${DOCKER_TAG} &&
                            docker image prune -f
                        '
                    """
                }
            }
        }

    }
}
